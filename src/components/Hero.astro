---
import "../stars.css";
---

<div id="stars"></div>

<article>
<h1 class="hidden">Hi!</h1>
<h2 class="hidden">I'm a web Designer <br> & Developer</h2>
    <div>
        <img class="logo" id="first" src="/png/experience3.png" alt="">
        <img class="logo" id="second" src="/png/experience2.png" alt="">
        <img class="logo" id="last" src="/png/experience1.png" alt="">
    </div>
</article>


<style>
/* Text animation */
.hidden{
    opacity: 0;
    transition: ease 1.8s;
    transform: translateY(5%);
    filter: blur(5px);
}
.show{
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
}




.logo{
    opacity: 0;
    transition: ease 2s;
    transform: translateY(15%);
    filter: blur(5px);
}
.show{
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
}

.logo:nth-child(1){
    transition-delay: 400ms;
}

.logo:nth-child(2){
    transition-delay: 600ms;
}

.logo:nth-child(3){
    transition-delay: 800ms;
}





    article{
        height: 500px;
        margin-top: 8em;
    }
    h1{ 
        font-size: 20px;
        margin-top: 2em;
        color: white;
    }

    h2{
        font-size: 50px;
        color: white;
        margin-top: -0.5em;
    }

    a{
        text-decoration: none;
        color: white;
        margin-left: 1em;
    }

    #first{
        width: 45%;
    }

    #second{
        width: 60%;
    }

    #last{
        width: 100%;
    }




    @media screen and (min-width: 599px) {

        article{
            margin-top: -12em;
            margin-left: 3em;
            margin-bottom: 3em;
        }
        h1{
            font-size: 45px;
            text-align: start;
            margin-top: 8em;
        }

        h2{
            font-size: 80px;
            margin-top: -0.5em;
            margin-bottom: 0%;
        }

        div{
            margin-bottom: 3em;
            display: flex;
            text-align: center;
        }


        #first{
            width: 15%;
            height: 10%;
        }
        #second{
            width: 20%;
            height: 5%;
        }
        #last{
            width: 35%;
            height: 10%;
        }
    }


    @media screen and (min-width: 999px){
        article{
            margin-top: -8em;
            margin-bottom: 5em;
        }
        h2{
            font-size: 120px;
        }

        #first{
            width: 12%;

        }
        #second{
            width: 16%;

        }
        #last{
            width: 28%;

        }
    }
</style>



<script>
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            console.log(entry)
            if(entry.isIntersecting) {
                entry.target.classList.add('show');
            } else {
                entry.target.classList.remove('show');
            }
        });
    });
    
    const hiddenElements = document.querySelectorAll(".hidden");
    hiddenElements.forEach((el) => observer.observe(el));

    const logoElements = document.querySelectorAll(".logo");
    logoElements.forEach((el) => observer.observe(el));
</script>
